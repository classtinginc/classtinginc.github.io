body
  padding-top: 60px

#page
  section
    padding: 64px 0

  h2, h3, h4, p, address, dt
    color: color-black

  span
    color: color-grey-400

  h2
    font-size: 44px
    text-align: center
    margin-bottom: 48px
    display: block
    font-weight: 400

  dl
    margin: 0

  img
    display: block

  .row
    padding: 0 16px

  .container-fluid
    background-color: #eee
    background-size: cover
    background-position: center;
    text-align: center

  .btn-white
    @extend $round-white-btn
    width: 240px

  .btn-green
    @extend $round-green-btn
    width: 80%

  .guide
    text-align: center

    img
      margin: auto

    article
      margin-top: 48px;

    p
      min-height: 50px;

.light
  color: white !important

